{
  "name": "jobnagringa-astro",
  "type": "module",
  "version": "1.0.0",
  "description": "Job na Gringa - Remote international jobs for Brazilians",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "lint": "eslint . --max-warnings=10",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{astro,ts,tsx,js,jsx,json,css,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{astro,ts,tsx,js,jsx,json,css,md,yml,yaml}\"",
    "lighthouse": "lhci autorun && node scripts/lighthouse-cleanup.js",
    "lighthouse:collect": "lhci collect && node scripts/lighthouse-cleanup.js",
    "lighthouse:cleanup": "node scripts/lighthouse-cleanup.js"
  },
  "dependencies": {
    "@astrojs/node": "^9.5.1",
    "@astrojs/partytown": "^2.1.4",
    "@clerk/clerk-js": "^5.119.1",
    "astro": "^5.16.9"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@eslint/js": "^9.39.2",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@lhci/cli": "^0.15.1",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "cssnano": "^7.1.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  }
}
