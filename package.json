{
  "name": "jobnagringa-astro",
  "type": "module",
  "version": "1.0.0",
  "description": "Job na Gringa - Remote international jobs for Brazilians",
  "scripts": {
    "dev": "astro dev",
    "build": "NODE_OPTIONS=--max-old-space-size=18192 astro build",
    "preview": "astro preview",
    "astro": "astro",
    "check": "NODE_OPTIONS=--max-old-space-size=18192 astro check",
    "lint": "eslint . --max-warnings=10",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{astro,ts,tsx,js,jsx,json,css,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{astro,ts,tsx,js,jsx,json,css,md,yml,yaml}\"",
    "lighthouse": "lhci autorun && node scripts/lighthouse-cleanup.js",
    "lighthouse:collect": "lhci collect && node scripts/lighthouse-cleanup.js",
    "lighthouse:cleanup": "node scripts/lighthouse-cleanup.js",
    "lighthouse:baseline": "node scripts/lighthouse-baseline.js",
    "lighthouse:history": "node scripts/lighthouse-history.js",
    "lighthouse:history:add": "node scripts/lighthouse-history.js --add",
    "lighthouse:history:show": "node scripts/lighthouse-history.js --show",
    "lighthouse:history:export": "node scripts/lighthouse-history.js --export",
    "lighthouse:compare": "node scripts/lighthouse-compare.js",
    "lighthouse:compare:baseline": "node scripts/lighthouse-compare.js --baseline",
    "lighthouse:compare:previous": "node scripts/lighthouse-compare.js --previous",
    "lighthouse:compare:ci": "node scripts/lighthouse-compare.js --ci --threshold 3",
    "lighthouse:full": "bun run lighthouse && bun run lighthouse:baseline && bun run lighthouse:history:add",
    "test": "playwright test",
    "test:visual": "playwright test tests/visual",
    "test:visual:update": "playwright test tests/visual --update-snapshots",
    "visual:test": "playwright test tests/visual",
    "visual:update": "playwright test tests/visual --update-snapshots",
    "visual:test:mobile": "playwright test tests/visual --project=mobile",
    "visual:test:mobile-large": "playwright test tests/visual --project=mobile-large",
    "visual:test:tablet": "playwright test tests/visual --project=tablet",
    "visual:test:desktop": "playwright test tests/visual --project=desktop",
    "visual:test:desktop-medium": "playwright test tests/visual --project=desktop-medium",
    "visual:test:desktop-wide": "playwright test tests/visual --project=desktop-wide",
    "visual:test:all-mobile": "playwright test tests/visual --project=mobile --project=mobile-large",
    "visual:test:all-desktop": "playwright test tests/visual --project=desktop --project=desktop-medium --project=desktop-wide",
    "visual:report": "playwright show-report tests/__reports__",
    "visual:baseline": "playwright test tests/visual --update-snapshots --reporter=list"
  },
  "dependencies": {
    "@astrojs/node": "^9.5.3",
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/sitemap": "^3.7.0",
    "@clerk/astro": "^2.17.2",
    "@strapi/client": "^1.6.1",
    "astro": "^5.17.2",
    "astro-compressor": "^1.2.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@eslint/js": "^10.0.1",
    "@fullhuman/postcss-purgecss": "^8.0.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.58.2",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "cssnano": "^7.1.2",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "terser": "^5.46.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  }
}
