---
import BaseLayout from '@layouts/BaseLayout.astro';
import CommunityNavbar from '@components/CommunityNavbar.astro';
import YouTubeEmbed from '@components/YouTubeEmbed.astro';
import { videos, getVideoBySlug } from '@data/videos';

export function getStaticPaths() {
  return videos.map((video) => ({
    params: { slug: video.slug },
  }));
}

const { slug } = Astro.params;
const video = getVideoBySlug(slug as string);

if (!video) {
  return Astro.redirect('/404');
}
---

<BaseLayout
  title={video.title}
  description={video.description}
  ogImage={`https://img.youtube.com/vi/${video.youtubeId}/maxresdefault.jpg`}
  robots={'noindex'}
  wfPage={'66d701da7d5d0e57c3483e63'}
>
  <div class="nav_wrapper">
    <CommunityNavbar />
  </div>
</BaseLayout>
<div class="video-detail_section">
  <div class="video-detail_wrapper">
    <div class="video-detail_content">
      <div class="video-detail_header">
        <a href="/community" class="video-detail_back-link w-inline-block">
          <div class="icon-1x1-medium w-embed">
            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24"
              ><path
                fill="currentColor"
                d="m7.825 13l5.6 5.6L12 20l-8-8l8-8l1.425 1.4l-5.6 5.6H20v2z"></path></svg
            >
          </div>
          <span>Voltar para Community Recaps</span>
        </a>
      </div>

      <div class="video-detail_main">
        <div class="video-detail_video-container">
          <YouTubeEmbed videoId={video.youtubeId} title={video.title} />
        </div>

        <div class="video-detail_info">
          <div class="text-style-caption text-color-primary">{video.episodeNumber}</div>
          <h1 class="video-detail_title">{video.title}</h1>
          <div class="video-detail_description">
            <p>{video.description}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

