<style>
  .video-detail_section {
    padding: 2rem 1rem;
    min-height: 100vh;
    background-color: var(--background-color-primary, #fff);
  }

  .video-detail_wrapper {
    max-width: 900px;
    margin: 0 auto;
  }

  .video-detail_content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .video-detail_header {
    margin-bottom: 1rem;
  }

  .video-detail_back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-color-secondary, #666);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }

  .video-detail_back-link:hover {
    color: var(--text-color-primary, #333);
  }

  .video-detail_main {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .video-detail_video-container {
    width: 100%;
  }

  .video-detail_info {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .video-detail_title {
    font-size: 1.5rem;
    font-weight: 600;
    line-height: 1.3;
    margin: 0;
    color: var(--text-color-primary, #1a1a1a);
  }

  .video-detail_description {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--text-color-secondary, #4a4a4a);
  }

  .video-detail_description p {
    margin: 0;
  }

  @media (min-width: 768px) {
    .video-detail_section {
      padding: 3rem 2rem;
    }

    .video-detail_title {
      font-size: 1.75rem;
    }
  }
</style>
