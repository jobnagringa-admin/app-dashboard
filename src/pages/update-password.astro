---
/**
 * Update Password Page
 *
 * Empty page that redirects to Clerk password update.
 * The actual UI is handled by Clerk's hosted page.
 */

import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Atualizar Senha - #JNG"
  noIndex={true}
  includeNavigation={false}
  includeFooter={false}
  bodyClass=""
>
  <!-- Password update is handled by Clerk redirect -->
  <div class="utility_section">
    <div class="utility_container">
      <div class="text-size-large text-weight-semibold">Redirecionando...</div>
      <p class="text-color-muted">Aguarde enquanto redirecionamos para atualizar sua senha.</p>
    </div>
  </div>
</BaseLayout>

<script is:inline>
  // Redirect to Clerk user profile for password update
  (function() {
    window.location.href = 'https://accounts.jobnagringa.com.br/user';
  })();
</script>

<style>
  .utility_section {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 2rem;
  }

  .utility_container {
    text-align: center;
  }
</style>
