              </div>
            </div>

            <!-- Product Info -->
            <div class="product-info">
              <h1 class="heading-style-h2">
                {/* product.name */}
                Product: {slug}
              </h1>

              <div class="product-price text-weight-medium">
                {/* product.price */}
                <span class="price">R$ 0,00</span>
              </div>

              <div class="spacer-small"></div>

              <!-- Product Description -->
              <div class="product-description w-richtext">
                {/* product.description */}
                <p>Product description will be loaded from the CMS.</p>
              </div>

              <div class="spacer-medium"></div>

              <!-- Product Options (if any) -->
              <div class="product-options">
                {/* SKU selector, quantity, etc. */}
              </div>

              <div class="spacer-medium"></div>

              <!-- Add to Cart Button -->
              <div class="product-actions">
                <a href="#" class="button w-button">
                  Add to Cart
                </a>
              </div>
