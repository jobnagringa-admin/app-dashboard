---
/**
 * PayPal Checkout Page
 *
 * Alternative checkout page for PayPal payments.
 * Webflow commerce integration.
 */

import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="PayPal Checkout - #jobnagringa"
  description="Finalize sua assinatura com PayPal"
  includeNavigation={true}
  includeFooter={false}
  noIndex={true}
  bodyClass=""
>
  <div class="checkout_section">
    <div class="container-medium">
      <div class="checkout_container">
        <div class="checkout_header">
          <a href="/" class="link-return w-inline-block">
            <div class="button is-small is-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"></path>
              </svg>
            </div>
          </a>
          <h1 class="heading-style-h3">Checkout PayPal</h1>
        </div>

        <div class="checkout_content is-centered">
          <div class="checkout_form-wrapper">
            <div class="paypal_checkout-info">
              <div class="paypal_logo">
                <svg xmlns="http://www.w3.org/2000/svg" width="100" height="32" viewBox="0 0 124 33">
