---
/**
 * SlaterApp.astro
 *
 * Slater App Custom JavaScript
 *
 * Purpose:
 * - Load custom JavaScript code from Slater.app
 * - Slater is a Webflow-focused JS management tool
 *
 * Environment Variables Required:
 * - PUBLIC_SLATER_PROJECT_ID: Slater project ID
 * - PUBLIC_SLATER_SCRIPT_ID: Slater script ID
 *
 * Migration Notes:
 * - Original script: https://slater.app/8634/22027.js
 * - Project ID: 8634
 * - Script ID: 22027
 * - Consider migrating Slater code directly into Astro components
 * - Review Slater code for functionality that can be natively implemented
 *
 * Recommended Migration Path:
 * 1. Download Slater script content
 * 2. Analyze functionality
 * 3. Convert to TypeScript/modern JS
 * 4. Integrate into appropriate Astro components
 */

interface Props {
  /**
   * Enable Slater script loading
   * @default true
   */
  enabled?: boolean;

  /**
   * Slater project ID
   */
  projectId?: string;

  /**
   * Slater script ID
   */
  scriptId?: string;
}

const {
  enabled = true,
  projectId = import.meta.env.PUBLIC_SLATER_PROJECT_ID || '8634',
  scriptId = import.meta.env.PUBLIC_SLATER_SCRIPT_ID || '22027'
} = Astro.props;

const slaterUrl = `https://slater.app/${projectId}/${scriptId}.js`;
---

{enabled && projectId && scriptId && (
  <>
    <!-- Slater.app Custom JavaScript -->
    <script async src={slaterUrl}></script>
  </>
)}
