<style>
  .hide {
    display: none;
  }
  .error {
    border: 1px red solid;
  }
  .success {
    border: 1px #0acf0a solid;
  }
  .error-message {
    font-size: 12px;
    color: red;
    margin-top: -8px;
  }
</style>

{noIndex && <meta name="robots" content="noindex">}

<slot />
