---
/**
 * AnalyticsHead Component
 *
 * Contains all analytics and tracking scripts that should go in <head>.
 * Includes Google Tag Manager, Google Analytics, and Ahrefs.
 *
 * @usage
 * ```astro
 * ---
 * import AnalyticsHead from '../components/AnalyticsHead.astro';
 * ---
 * <head>
 *   <AnalyticsHead />
 * </head>
 * ```
 *
 * Environment Variables:
 * - PUBLIC_GTM_ID: Google Tag Manager ID
 * - PUBLIC_GA_ID: Google Analytics ID
 * - PUBLIC_AHREFS_KEY: Ahrefs analytics key
 */

export interface Props {
  /**
   * Google Tag Manager ID
   */
  gtmId?: string;

  /**
   * Google Analytics ID
   */
  gaId?: string;

  /**
   * Ahrefs analytics key
   */
  ahrefsKey?: string;

  /**
   * Disable analytics (useful for development)
   */
  disabled?: boolean;
}

const {
  gtmId = import.meta.env.PUBLIC_GTM_ID || 'GTM-58XVRQZ',
  gaId = import.meta.env.PUBLIC_GA_ID || 'G-DNCKG4JJ77',
  ahrefsKey = import.meta.env.PUBLIC_AHREFS_KEY || '0IynPqzGcpJ1FaTQBiSG9g',
  disabled = import.meta.env.DEV && !import.meta.env.PUBLIC_ENABLE_ANALYTICS,
} = Astro.props;
---

{!disabled && (
  <>
    <!-- Google Analytics -->
    <script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`}></script>
    <script is:inline define:vars={{ gaId }}>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('set', 'developer_id.dZGVlNj', true);
      gtag('js', new Date());
      gtag('config', gaId);
    </script>

    <!-- Google Tag Manager -->
    <script is:inline define:vars={{ gtmId }}>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' });
        const f = d.getElementsByTagName(s)[0],
    j = d.createElement(s),
    dl = l != 'dataLayer' ? '&l=' + l : '';
        j.async = true;
        j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, 'script', 'dataLayer', gtmId);
    </script>

    <!-- Ahrefs Analytics -->
    <script is:inline async src="https://analytics.ahrefs.com/analytics.js" data-key={ahrefsKey}></script>
  </>
)}
